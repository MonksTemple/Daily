<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="${relativePackage}.${activityClass}">
	
    <RelativeLayout 
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="30pt"
        android:background="@color/theme"
        >
        <ImageView 
            android:id="@+id/re"
            android:layout_width="18pt"
            android:layout_height="18pt"
            android:src="@drawable/returna"
            android:onClick="back"
            android:layout_centerVertical="true"
            />
        
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/re"
            android:text="用户注册"
            android:layout_marginLeft="3pt"
            android:textColor="@color/white"
            android:textSize="10pt"
            />
    </RelativeLayout>
    
    <RelativeLayout 
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10pt"
        android:layout_marginRight="10pt"
        android:layout_marginTop="10pt"
        android:layout_marginBottom="14pt"
        android:layout_below="@id/title"
        >
        
        <RelativeLayout 
            android:id="@+id/uname"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="4pt"
            android:layout_marginBottom="4pt"
		>
         <TextView
            android:id="@+id/user"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="5pt"
            android:text="用户名："
            android:textColor="@color/black"
            android:textSize="7pt"
            />
         
         <EditText
             android:id="@+id/nameText"
             android:layout_width="match_parent"
             android:layout_height="45dp"
             android:layout_toRightOf="@id/user"
             android:background="@drawable/et" />
         </RelativeLayout>
         
        <RelativeLayout 
            android:id="@+id/pwd"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@id/uname"
            android:layout_marginTop="4pt"
            android:layout_marginBottom="4pt"
		>
         <TextView
            android:id="@+id/password"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="5pt"
            android:text="新密码："
            android:textColor="@color/black"
            android:textSize="7pt"
            />
         
         <EditText
             android:id="@+id/passwordText"
             android:layout_width="fill_parent"
             android:layout_height="45dp"
             android:inputType="textPassword"
             android:layout_toRightOf="@id/password"
             android:background="@drawable/et" />

         </RelativeLayout>
         
        <RelativeLayout 
            android:id="@+id/ipwd"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@id/pwd"
            android:layout_marginTop="4pt"
            android:layout_marginBottom="4pt"
		>
         <TextView
            android:id="@+id/ipassword"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="5pt"
            android:text="确认密码："
            android:textColor="@color/black"
            android:textSize="7pt"
            />
         
         <EditText
             android:id="@+id/password2"
             android:layout_width="match_parent"
             android:layout_height="45dp"
             android:inputType="textPassword"
             android:layout_toRightOf="@id/ipassword"
             android:background="@drawable/et" />
         </RelativeLayout>
         
        
        <RelativeLayout 
            android:id="@+id/sno"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@id/ipwd"
            android:layout_marginTop="4pt"
            android:layout_marginBottom="4pt"
		>
         <TextView
            android:id="@+id/stuno"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="5pt"
            android:text="学号/职工号："
            android:textColor="@color/black"
            android:textSize="7pt"
            />
         
         <EditText
             android:id="@+id/snoNum"
             android:layout_width="match_parent"
             android:layout_height="45dp"
             android:layout_toRightOf="@id/stuno"
             android:background="@drawable/et" />
         </RelativeLayout>
        
    </RelativeLayout>
    
    <Button
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="@color/theme"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:onClick="register"
        android:layout_below="@id/body"
        android:layout_marginLeft="10pt"
        android:layout_marginRight="10pt"
        android:text="注    册" />
    
    
    <Button
        android:id="@+id/reset"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginLeft="10pt"
        android:layout_marginRight="10pt"
        android:layout_marginTop="10pt"
        android:background="@color/theme"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:layout_below="@id/register"
        android:text="重    置" />

</RelativeLayout>
