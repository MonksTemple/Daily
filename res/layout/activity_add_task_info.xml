<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:scrollbars="vertical">
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout 
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="30pt"
        android:background="@color/theme"
        >
        <ImageView 
            android:id="@+id/re"
            android:layout_width="18pt"
            android:layout_height="18pt"
            android:onClick="back"
            android:src="@drawable/returna"
            android:layout_centerVertical="true"
            />
        
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/re"
            android:text="任务信息"
            android:layout_marginLeft="3pt"
            android:textColor="@color/white"
            android:textSize="10pt"
            />
        
    </RelativeLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5pt"
        android:layout_below="@id/title"
        android:orientation="vertical"
        >       
       
         <RelativeLayout 
             android:layout_width="fill_parent"
             android:layout_height="60dp"
             android:layout_marginLeft="5pt"
            android:layout_marginRight="5pt"
             
             >
           <TextView
            android:id="@+id/taskname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="任务名称：    "
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="7pt" />
           
           <EditText
             android:background="@drawable/et"
             android:id="@+id/tname"
             android:layout_width="match_parent"
             android:layout_height="40dp"
             android:layout_toRightOf="@id/taskname"
             android:hint=" 寻找灰太狼"
             android:textSize="7pt"
             android:layout_centerVertical="true"
             android:textColor="@color/black" />
             
         </RelativeLayout>
         
         <RelativeLayout 
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="5pt"
            android:layout_marginRight="5pt"
            android:layout_marginTop="8pt"
             >
           <TextView
            android:id="@+id/intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="任务简介：    "           
            android:textColor="@color/black"
            android:textSize="7pt" />
           
            <EditText
             android:background="@drawable/et"
             android:id="@+id/info"
             android:layout_width="match_parent"
             android:layout_height="50pt"
             android:layout_toRightOf="@id/intro"
             android:hint=" 自己学习"
             android:singleLine="false"
             android:inputType="textMultiLine"
             android:scrollHorizontally="true"
             android:textSize="7pt"
             android:textColor="@color/black" />
             
         </RelativeLayout>
         
         
         
         <RelativeLayout 
             android:layout_width="fill_parent"
             android:layout_height="60dp"
             android:layout_marginLeft="5pt"
            android:layout_marginRight="5pt"
             >
           <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="任务举办方："
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="7pt" />
           
            <EditText
             android:background="@drawable/et"
             android:id="@+id/createname"
             android:layout_width="match_parent"
             android:layout_height="40dp"
             android:layout_toRightOf="@id/name"
             android:layout_centerVertical="true"
             android:hint=" 开心超人"
             android:textSize="7pt"
             android:textColor="@color/black"/>
             
         </RelativeLayout>
          
         
          <RelativeLayout 
             android:layout_width="fill_parent"
             android:layout_height="60dp"
             android:layout_marginLeft="5pt"
            android:layout_marginRight="5pt"
             >
           <TextView
            android:id="@+id/stime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始时间 ：    "
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="7pt" />
           
            <EditText
             android:background="@drawable/et"
             android:id="@+id/startime"
             android:layout_width="match_parent"
             android:layout_height="40dp"
             android:layout_toRightOf="@id/stime"
             android:layout_centerVertical="true"
             android:hint=" 2015-12-30"
             android:textSize="7pt"
             android:textColor="@color/black"/>
             
         </RelativeLayout>
         
          <RelativeLayout 
             android:layout_width="fill_parent"
             android:layout_height="60dp"
             android:layout_marginLeft="5pt"
            android:layout_marginRight="5pt"
             >
           <TextView
            android:id="@+id/etime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结束时间 ：    "
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="7pt" />
           
            <EditText
             android:background="@drawable/et"
             android:id="@+id/endtime"
             android:layout_width="match_parent"
             android:layout_height="40dp"
             android:layout_toRightOf="@id/etime"
             android:layout_centerVertical="true"
             android:hint=" 2015-01-30"
             android:textSize="7pt"
             android:textColor="@color/black"/>
             
         </RelativeLayout>
         
           <RelativeLayout 
             android:layout_width="fill_parent"
             android:layout_height="60dp"
             android:layout_marginLeft="5pt"
            android:layout_marginRight="5pt"
             >
           <TextView
            android:id="@+id/part"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地点 ：            "
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="7pt" />
           
            <EditText
             android:background="@drawable/et"
             android:id="@+id/place"
             android:layout_width="match_parent"
             android:layout_height="40dp"
             android:layout_toRightOf="@id/part"
             android:layout_centerVertical="true"
             android:hint=" 学活"
             android:textSize="7pt"
             android:textColor="@color/black"/>
             
         </RelativeLayout>
         
            <RelativeLayout 
             android:layout_width="fill_parent"
             android:layout_height="60dp"
             android:layout_marginLeft="5pt"
            android:layout_marginRight="5pt"
             >
           <TextView
            android:id="@+id/rtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提醒时间 ：    "
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="7pt" />
           
            <EditText
             android:background="@drawable/et"
             android:id="@+id/remindtime"
             android:layout_width="match_parent"
             android:layout_height="40dp"
             android:layout_toRightOf="@id/rtime"
             android:layout_centerVertical="true"
             android:hint=" 2015-01-30"
             android:textSize="7pt"
             android:textColor="@color/black"/>
             
         </RelativeLayout>
         
       <Button
      android:id="@+id/sure"
      android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5pt"
        android:layout_marginLeft="10pt"
        android:layout_marginRight="10pt"
        android:text="提交信息"
        android:onClick="sure"
        android:textSize="15dp"
        android:background="@color/theme"
      />
        
    </LinearLayout>
        
</RelativeLayout>
</ScrollView>