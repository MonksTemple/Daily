<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:scrollbars="vertical">
    <LinearLayout android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    <RelativeLayout 
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="30pt"
        android:background="@color/theme">
        
        <ImageView 
            android:id="@+id/re"
            android:layout_width="18pt"
            android:layout_height="18pt"
            android:src="@drawable/returna"
            android:layout_centerVertical="true"
            />
        
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/re"
            android:text="活动信息"
            android:layout_marginLeft="3pt"
            android:textColor="@color/white"
            android:textSize="10pt"
            />
        
        <ImageView 
            android:id="@+id/cross"
            android:layout_width="10pt"
            android:layout_height="10pt"
            android:layout_marginRight="5pt"
            android:src="@drawable/cross"
            android:layout_toLeftOf="@+id/lines"
            android:layout_centerVertical="true"
            />
        
        <ImageView 
            android:id="@id/lines"
            android:layout_width="12pt"
            android:layout_height="12pt"
            android:layout_marginRight="10pt"
            android:onClick="popupmenu"
            android:src="@drawable/lines"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5pt"
        android:layout_below="@id/title"
        android:orientation="vertical"
        >       
       
         <RelativeLayout 
             android:layout_width="fill_parent"
             android:layout_height="60dp"
             android:layout_marginLeft="5pt"
            android:layout_marginRight="5pt"
             
             >
           <TextView
            android:id="@+id/actName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动名称：    "
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="7pt" />
           
           <EditText
             android:background="@drawable/et"
             android:id="@+id/actNameText"
             android:layout_width="match_parent"
             android:layout_height="40dp"
             android:layout_toRightOf="@id/taskname"
             android:text=" 寻找灰太狼"
             android:textSize="7pt"
             android:layout_centerVertical="true"
             android:textColor="@color/black" />
             
         </RelativeLayout>
         
           <RelativeLayout 
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="5pt"
             android:layout_marginRight="5pt"
             android:layout_marginTop="8pt"
             >
           <TextView
            android:id="@+id/actIntro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动简介：    "           
            android:textColor="@color/black"
            android:textSize="7pt" />
           
            <EditText
             android:background="@drawable/et"
             android:id="@+id/actIntroText"
             android:layout_width="match_parent"
             android:layout_height="50pt"
             android:layout_toRightOf="@id/intro"
             android:text=" 自己学习"
             android:singleLine="false"
             android:inputType="textMultiLine"
             android:scrollHorizontally="true"
             android:textSize="7pt"
             android:textColor="@color/black" />
             
         </RelativeLayout>
         
         <RelativeLayout 
             android:layout_width="fill_parent"
             android:layout_height="60dp"
             android:layout_marginLeft="5pt"
            android:layout_marginRight="5pt"
             >
           <TextView
            android:id="@+id/actSponser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动举办方："
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="7pt" />
           
            <EditText
             android:background="@drawable/et"
             android:id="@+id/actSponserText"
             android:layout_width="match_parent"
             android:layout_height="40dp"
             android:layout_toRightOf="@id/name"
             android:layout_centerVertical="true"
             android:text=" 开心超人"
             android:textSize="7pt"
             android:textColor="@color/black"/>
             
         </RelativeLayout>
          
         
          <RelativeLayout 
             android:layout_width="fill_parent"
             android:layout_height="60dp"
             android:layout_marginLeft="5pt"
             android:layout_marginRight="5pt"
             >
           <TextView
            android:id="@+id/actStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始时间 ：    "
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="7pt" />
           
            <EditText
             android:background="@drawable/et"
             android:id="@+id/actStartTimeText"
             android:layout_width="match_parent"
             android:layout_height="40dp"
             android:layout_toRightOf="@id/stime"
             android:layout_centerVertical="true"
              android:editable="false"
             android:clickable="true"
             android:text=" 2015-12-30"
             android:textSize="7pt"
             android:textColor="@color/black"/>
             
         </RelativeLayout>
         
          <RelativeLayout 
             android:layout_width="fill_parent"
             android:layout_height="60dp"
             android:layout_marginLeft="5pt"
            android:layout_marginRight="5pt"
             >
           <TextView
            android:id="@+id/actEndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结束时间 ：    "
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="7pt" />
           
            <EditText
             android:background="@drawable/et"
             android:id="@+id/actEndTimeText"
             android:layout_width="match_parent"
             android:layout_height="40dp"
             android:layout_toRightOf="@id/etime"
             android:layout_centerVertical="true"
             android:text=" 2015-01-30" 
             android:editable="false"
             android:clickable="true"
             
             android:textSize="7pt"
             android:textColor="@color/black"/>
             
         </RelativeLayout>
         
           <RelativeLayout 
             android:layout_width="fill_parent"
             android:layout_height="60dp"
             android:layout_marginLeft="5pt"
            android:layout_marginRight="5pt"
             >
           <TextView
            android:id="@+id/actPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地点 ：            "
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="7pt" />
           
            <EditText
             android:background="@drawable/et"
             android:id="@+id/actPlaceText"
             android:layout_width="match_parent"
             android:layout_height="40dp"
             android:layout_toRightOf="@id/part"
             android:layout_centerVertical="true"
             android:text=" 学活"
             android:textSize="7pt"
             android:textColor="@color/black"/>
             
         </RelativeLayout>
         
            <RelativeLayout 
             android:layout_width="fill_parent"
             android:layout_height="60dp"
             android:layout_marginLeft="5pt"
            android:layout_marginRight="5pt"
             >
           <TextView
            android:id="@+id/actRemindTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提醒时间 ：    "
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="7pt" />
           
            <EditText
             android:background="@drawable/et"
             android:id="@+id/actRemindTimeText"
             android:layout_width="match_parent"
             android:layout_height="40dp"
             android:layout_toRightOf="@id/rtime"
             android:layout_centerVertical="true"
              android:editable="false"
             android:clickable="true"
             android:text=" 2015-01-30"
             android:textSize="7pt"
             android:textColor="@color/black"/>
             
         </RelativeLayout>
         
       <Button
      	android:id="@+id/sure"
      	android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5pt"
        android:layout_marginLeft="10pt"
        android:layout_marginRight="10pt"
        android:text="提交信息"
        android:textSize="15dp"
        android:background="@color/theme"
      />
        
    </LinearLayout>
        
</LinearLayout>
</ScrollView>
